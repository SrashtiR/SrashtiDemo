<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Base.Theme.SrashtiDemoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/toolbar_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/toolbar_bg</item>
        <item name="android:navigationBarColor">@color/toolbar_bg</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="Theme.SrashtiDemoApp" parent="Base.Theme.SrashtiDemoApp" />

    <!-- Toolbar Styling -->
    <style name="CustomToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="backgroundTint">@color/toolbar_bg</item>
    </style>
</resources>
